@page
@model IndexModel
@{
    ViewData["Title"] = "Home";
}

<div class="row">
    <div class="col s12">
        <h1>Welcome</h1>
        <p>This site simplifies some warcraftlog-queries.</p>
        <form method="post">
            <div class="row">
                <div class="input-field col s12">
                    <input id="link" type="text" name="link" class="validate">
                    <label class="active" for="link">Link to Warcraftlogs-report, or a guild-page</label>
                </div>
                <div class="input-field col s12">
                    <p>
                        <label>
                            <input name="analysis" type="radio" value="iqdmana" checked />
                            <span>ICQ to healer mana</span>
                        </label>
                    </p>
                    <p>
                        <label>
                            <input name="analysis" type="radio" value="future2" disabled="disabled"/>
                            <span>TODO: Metric 2</span>
                        </label>
                    </p>
                    <p>
                        <label>
                            <input name="analysis" type="radio" value="future3" disabled="disabled"/>
                            <span>TODO: Metric 3</span>
                        </label>
                    </p>
                    <p>
                        <label>
                            <input name="analysis" type="radio" value="future4" disabled="disabled"/>
                            <span>TODO: Metric 4</span>
                        </label>
                    </p>
                </div>
                <button class="btn waves-effect waves-light" type="submit" name="action">
                    Submit
                    <i class="material-icons right">send</i>
                </button>
            </div>
        </form>
    </div>
</div>